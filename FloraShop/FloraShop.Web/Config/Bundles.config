      </files>
    </add>

    <add bundlePath="~/js/page/content">
      <files>
        <add filePath="~/Scripts/flora/superfish.js" />
        <add filePath="~/Scripts/flora/jquery.iosslider.min.js" />
        <add filePath="~/Scripts/flora/flaunt.js" />
        <add filePath="~/Scripts/pages/content.js" />
      </files>
    </add>

    <add bundlePath="~/js/page/product-detail">
      <files>
        <add filePath="~/Scripts/flora/jquery.easing.1.3.js" />
        <add filePath="~/Scripts/flora/owl.carousel.js" />
        <add filePath="~/Scripts/pages/product-detail.js" />
      </files>
    </add>
    
  </jsBundles>
</bundleConfig>